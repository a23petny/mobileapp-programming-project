<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#FFDDC1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:gravity="start"
        android:textSize="25sp"
        android:background="#C1FFD7"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/emoji" />

    <TextView
        android:id="@+id/emoji"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:gravity="end"
        android:textSize="25sp"
        android:background="#C1D4FF"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/eta_locl"
        android:layout_width="150sp"
        android:layout_height="250sp"
        android:background="#E1C1FF"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/desc" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="150sp"
        android:layout_height="250sp"
        android:background="#FFC1C1"
        app:layout_constraintTop_toBottomOf="@id/emoji"
        app:layout_constraintStart_toEndOf="@id/eta_locl"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/add"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="ADD +"
        android:textColor="#FFFFFF"
        android:background="#98FB98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
